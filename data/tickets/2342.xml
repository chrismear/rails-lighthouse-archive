&lt;pre&gt;&lt;code class=&quot;ruby&quot;&gt;
def test_shift_returns_nil_when_empty
  while !@ordered_hash.empty?
    @ordered_hash.shift
  end
  assert_nil @ordered_hash.shift
end
&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;</body-html>
