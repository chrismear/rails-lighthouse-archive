+    @fallbacks.map(:"de-AT" => :"de-DE")
+    assert_equal [:de, :"en-US", :en], @fallbacks[:"de"]
+  end
+
+  test "with a German mapping defined it returns [:de-DE, :de, :en-US] for de-DE" do
+    @fallbacks.map(:"de-AT" => :"de-DE")
+    assert_equal [:"de-DE", :de, :"en-US", :en], @fallbacks[:"de-DE"]
